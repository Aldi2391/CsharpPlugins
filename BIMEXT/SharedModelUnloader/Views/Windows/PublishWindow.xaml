<Window x:Class="SharedModelUnloader.Views.Windows.PublishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharedModelUnloader.Views.Windows"
        mc:Ignorable="d"
        Title="Публикация моделей" Height="430" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical"
                    Margin="5">
            <TextBlock Text="Введите ФИО:"/>
            <TextBox Height="30"
                     Text="{Binding Author}"
                     />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical"
                    Margin="5" Grid.RowSpan="2">
            <TextBlock Text="Краткое описание изменений в текущей версии:"/>
            <Grid Height="Auto" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Height="250"
                         TextWrapping="Wrap"
                         Text="{Binding Description}"
                         VerticalScrollBarVisibility="Auto"
                         />
            </Grid>
        </StackPanel>

        <Button Grid.Row="2"
                Height="35" Width="120"
                Content="Опубликовать"
                Command="{Binding PublishCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
    </Grid>
</Window>
