<Window x:Class="SharedModelUnloader.Views.Windows.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharedModelUnloader.Views.Windows"
        mc:Ignorable="d"
        Title="Результат выгрузки" Height="460" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="5"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Height="350"
            TextWrapping="Wrap"
            Text="{Binding Message}"
            VerticalScrollBarVisibility="Auto"
            IsReadOnly="True"
            />
        <Button Grid.Row="1" Height="35" Width="120"
            Content="Закрыть"
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
            />
    </Grid>
</Window>
